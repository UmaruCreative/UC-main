---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import LoadingSpinner from '../../components/LoadingSpinner.astro';
import NewHero from '../../components/NewHero.astro';
import NewAbout from '../../components/NewAbout.astro';
import NewWhy from '../../components/NewWhy.astro';
import LakesideBanner from '../../components/LakesideBanner.astro';
import NewHowIWork from '../../components/NewHowIWork.astro';
import NewWhoIWorkWith from '../../components/NewWhoIWorkWith.astro';
import MyCreations from '../../components/MyCreations.astro';
import PastryBanner from '../../components/PastryBanner.astro';
import AboutFounder from '../../components/AboutFounder.astro';
import DiscoverServices from '../../components/DiscoverServices.astro';
import BlogSection from '../../components/BlogSection.astro';
import NewContact from '../../components/NewContact.astro';
import NewFooter from '../../components/NewFooter.astro';
---

<Layout title="Umaru Creative | Ammattimaista verkkosuunnittelua joka kasvaa kanssasi" lang="fi">
  <LoadingSpinner />
  <Header />
  
  <!-- Finnish Hero Section -->
  <section class="min-h-screen flex flex-col justify-center relative overflow-hidden pt-16 animate-on-scroll">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.pexels.com/photos/531756/pexels-photo-531756.jpeg?auto=compress&cs=tinysrgb&w=1920&h=1080&dpr=2" 
        alt="Sininen taivas kelluvilla pilvilla" 
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-primary-50/80 to-white/90"></div>
    </div>

    <div class="container mx-auto px-6 md:px-12 py-20 md:py-32 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="font-alexandria font-bold text-4xl md:text-5xl lg:text-6xl leading-tight mb-6 hero-text">
          Ammattimaista verkkosuunnittelua joka kasvaa kanssasi
        </h1>
        
        <p class="text-lg md:text-xl text-primary-800 mb-10 max-w-3xl mx-auto hero-text">
          Edullista. Kaunista. Helppoa hallita. Täydellinen pienyrittäjille jotka haluavat tuloksia—ei stressiä.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center hero-buttons">
          <a 
            href="#pricing" 
            class="px-8 py-4 bg-primary-800 text-white rounded-md font-alexandria hover:bg-primary-700 transition-all duration-300 hover:shadow-lg hover:scale-105"
          >
            Katso hinnoittelu
          </a>
          <a 
            href="#contact" 
            class="px-8 py-4 bg-accent-100 text-primary-900 rounded-md font-alexandria hover:bg-accent-200 transition-all duration-300 hover:shadow-lg hover:scale-105"
          >
            Kysy kysymys
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Finnish About Section -->
  <section id="about" class="py-20 md:py-32">
    <div class="container mx-auto px-6 md:px-12">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block px-3 py-1 bg-accent-100 text-primary-800 rounded-full text-sm font-alexandria mb-4">
          Tietoa
        </span>
        
        <h2 class="font-alexandria font-bold text-3xl md:text-4xl mb-8">
          Tietoa Umaru Creativesta
        </h2>
        
        <p class="text-lg text-primary-800 mb-10">
          Luovia verkkoratkaisuja räätälöitynä yrityksellesi. Keskitymme pienyrityksiin jotka arvostavat laatua ja henkilökohtaista palvelua.
        </p>
        
        <a 
          href="#services" 
          class="inline-block px-6 py-3 bg-primary-800 text-white rounded-md font-alexandria hover:bg-primary-700 transition-colors"
        >
          Tutustu palveluihin
        </a>
      </div>
    </div>
  </section>

  <!-- Finnish Why Section -->
  <section id="why" class="py-20 md:py-32 bg-accent-50 animate-on-scroll">
    <div class="container mx-auto px-6 md:px-12">
      <div class="max-w-3xl mx-auto">
        <span class="inline-block px-3 py-1 bg-white text-primary-800 rounded-full text-sm font-alexandria mb-4">
          Miksi verkkosivut?
        </span>
        
        <h2 class="font-alexandria font-bold text-3xl md:text-4xl mb-8">
          Yrityksesi ansaitsee oman tilan
        </h2>
        
        <div class="prose prose-lg text-primary-800 max-w-none">
          <p>
            Verkkosivut ovat digitaalinen myymäläsi—saatavilla 24/7, rakentamassa luottamusta ja edistämässä kasvua.
          </p>
          
          <p>
            Sosiaalisen median alustat tulevat ja menevät. Algoritmit muuttuvat. Mutta verkkosivustosi on jotain mitä omistat ja hallitset.
          </p>
        </div>
      </div>
    </div>
  </section>

  <LakesideBanner />
  <NewHowIWork />
  <NewWhoIWorkWith />
  <MyCreations />
  <PastryBanner />
  <AboutFounder />
  <DiscoverServices />
  <BlogSection />
  <NewContact />
  <NewFooter />
</Layout>

<style>
  .hero-text {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.3s forwards;
  }

  .hero-buttons {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.6s forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Bloom effect for cards
  gsap.utils.toArray('.bloom-card').forEach((card, i) => {
    gsap.fromTo(
      card, 
      { 
        opacity: 0, 
        scale: 0.8, 
        filter: "blur(5px)" 
      }, 
      {
        opacity: 1,
        scale: 1,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: card,
          start: "top 80%",
          toggleActions: "play none none none"
        }
      }
    );
  });
  
  // Fade in animation for sections
  gsap.utils.toArray('.animate-on-scroll').forEach((section, i) => {
    gsap.fromTo(
      section, 
      { opacity: 0, y: 50 }, 
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: section,
          start: "top 80%",
          toggleActions: "play none none none"
        }
      }
    );
  });
</script>