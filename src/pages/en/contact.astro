---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import LoadingSpinner from '../../components/LoadingSpinner.astro';
import NewFooter from '../../components/NewFooter.astro';
---

<Layout title="Contact | Umaru Creative" description="Get in touch with Umaru Creative for your web design, content creation, or Google My Business optimization needs. Let's start a conversation about your project.">
  <LoadingSpinner />
  <Header />
  
  <main class="pt-32 pb-20">
    <section class="py-20 md:py-32 animate-on-scroll">
      <div class="container mx-auto px-6 md:px-12">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <span class="inline-block px-3 py-1 bg-accent-100 text-primary-800 rounded-full text-sm font-alexandria mb-4">
              Contact
            </span>
            
            <h1 class="font-alexandria font-bold text-4xl md:text-5xl mb-6">
              Let's Start a Conversation
            </h1>
            
            <p class="text-lg text-primary-800 max-w-2xl mx-auto">
              Ready to create something beautiful together? I'd love to hear about your project and discuss how we can bring your vision to life.
            </p>
          </div>
          
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Contact Form -->
            <div class="bg-white p-8 rounded-xl shadow-sm bloom-card">
              <h2 class="font-alexandria font-bold text-2xl mb-6">Send a Message</h2>
              
              <form class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label for="name" class="block text-sm font-medium text-primary-800 mb-1">Name</label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
                      required
                    />
                  </div>
                  
                  <div>
                    <label for="email" class="block text-sm font-medium text-primary-800 mb-1">Email</label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
                      required
                    />
                  </div>
                </div>
                
                <div>
                  <label for="service" class="block text-sm font-medium text-primary-800 mb-1">Service Interest</label>
                  <select
                    id="service"
                    name="service"
                    class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
                  >
                    <option value="">Select a service</option>
                    <option value="web-design">Web Design</option>
                    <option value="content-creation">Content Creation</option>
                    <option value="google-my-business">Google My Business</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                
                <div>
                  <label for="message" class="block text-sm font-medium text-primary-800 mb-1">Message</label>
                  <textarea
                    id="message"
                    name="message"
                    rows="5"
                    class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
                    placeholder="Tell me about your project..."
                    required
                  ></textarea>
                </div>
                
                <div>
                  <button
                    type="submit"
                    class="px-8 py-4 bg-primary-800 text-white rounded-md font-alexandria hover:bg-primary-700 transition-all duration-300 w-full contact-button"
                  >
                    Send Message
                  </button>
                </div>
              </form>
            </div>
            
            <!-- Contact Information -->
            <div class="space-y-8">
              <div class="bg-white p-8 rounded-xl shadow-sm bloom-card">
                <h2 class="font-alexandria font-bold text-2xl mb-6">Get in Touch</h2>
                
                <div class="space-y-6">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary-700">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-alexandria font-bold text-lg mb-1">Email</h3>
                      <p class="text-primary-700">umaru.creative@gmail.com</p>
                      <p class="text-primary-600 text-sm">I'll respond within 2 business days</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary-700">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-alexandria font-bold text-lg mb-1">Location</h3>
                      <p class="text-primary-700">Helsinki, Finland</p>
                      <p class="text-primary-600 text-sm">Serving clients across Finland and beyond</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary-700">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-alexandria font-bold text-lg mb-1">Response Time</h3>
                      <p class="text-primary-700">Within 2 business days</p>
                      <p class="text-primary-600 text-sm">Monday - Friday, 9:00 - 17:00 EET</p>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="bg-accent-50 p-8 rounded-xl bloom-card">
                <h3 class="font-alexandria font-bold text-xl mb-4">Prefer to Call?</h3>
                <p class="text-primary-700 mb-4">
                  I'm happy to discuss your project over a quick call. Email me first to schedule a convenient time.
                </p>
                <a 
                  href="mailto:umaru.creative@gmail.com?subject=Schedule a Call" 
                  class="inline-block px-6 py-3 bg-primary-800 text-white rounded-md font-alexandria hover:bg-primary-700 transition-colors"
                >
                  Schedule a Call
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <NewFooter />
</Layout>

<style>
  .contact-button {
    box-shadow: 0 0 0 0 rgba(55, 65, 81, 0.5);
    animation: buttonGlow 2s infinite;
  }

  @keyframes buttonGlow {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(55, 65, 81, 0.5);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(55, 65, 81, 0);
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Bloom effect for cards
  gsap.utils.toArray('.bloom-card').forEach((card, i) => {
    gsap.fromTo(
      card, 
      { 
        opacity: 0, 
        scale: 0.8, 
        filter: "blur(5px)" 
      }, 
      {
        opacity: 1,
        scale: 1,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: card,
          start: "top 80%",
          toggleActions: "play none none none"
        }
      }
    );
  });
  
  // Fade in animation for sections
  gsap.utils.toArray('.animate-on-scroll').forEach((section, i) => {
    gsap.fromTo(
      section, 
      { opacity: 0, y: 50 }, 
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: section,
          start: "top 80%",
          toggleActions: "play none none none"
        }
      }
    );
  });
</script>