---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import LoadingSpinner from '../../../components/LoadingSpinner.astro';
import ServiceHero from '../../../components/ServiceHero.astro';
import WhyItWorks from '../../../components/WhyItWorks.astro';
import ServiceCTA from '../../../components/ServiceCTA.astro';
import NewFooter from '../../../components/NewFooter.astro';
---

<Layout title="Content Creation Services | Umaru Creative" description="Professional content creation for social media and marketing. Short video content, promotional materials, and explanatory content that engages your audience.">
  <LoadingSpinner />
  <Header />
  <ServiceHero 
    title="Content That Connects and Converts"
    subtitle="Short video content, promotional materials, and social media content that tells your story and engages your audience effectively."
    ctaPrimary="Get Started"
    ctaSecondary="Ask a Question"
    ctaPrimaryLink="#contact"
    ctaSecondaryLink="#contact"
  />
  
  <section class="py-20 md:py-32 animate-on-scroll">
    <div class="container mx-auto px-6 md:px-12">
      <div class="max-w-3xl mx-auto">
        <span class="inline-block px-3 py-1 bg-accent-100 text-primary-800 rounded-full text-sm font-alexandria mb-4">
          Services
        </span>
        
        <h2 class="font-alexandria font-bold text-3xl md:text-4xl mb-8">
          What I Create for You
        </h2>
        
        <div class="space-y-8">
          <div class="bg-white p-8 rounded-xl shadow-sm bloom-card">
            <h3 class="font-alexandria font-bold text-xl mb-4">Short Video Content</h3>
            <p class="text-primary-700 mb-4">
              Engaging short-form videos for social media platforms. Perfect for showcasing your products, sharing behind-the-scenes content, or explaining your services in an accessible way.
            </p>
            <ul class="text-primary-700 space-y-2">
              <li>• Instagram Reels and Stories</li>
              <li>• TikTok content</li>
              <li>• YouTube Shorts</li>
              <li>• Product demonstrations</li>
            </ul>
          </div>
          
          <div class="bg-white p-8 rounded-xl shadow-sm bloom-card">
            <h3 class="font-alexandria font-bold text-xl mb-4">Promotional Content</h3>
            <p class="text-primary-700 mb-4">
              Eye-catching promotional materials that highlight your offerings and drive action. From social media posts to email campaigns.
            </p>
            <ul class="text-primary-700 space-y-2">
              <li>• Social media graphics</li>
              <li>• Promotional videos</li>
              <li>• Email newsletter content</li>
              <li>• Event announcements</li>
            </ul>
          </div>
          
          <div class="bg-white p-8 rounded-xl shadow-sm bloom-card">
            <h3 class="font-alexandria font-bold text-xl mb-4">Explanatory Content</h3>
            <p class="text-primary-700 mb-4">
              Clear, helpful content that educates your audience about your services, processes, or industry. Build trust through transparency and expertise.
            </p>
            <ul class="text-primary-700 space-y-2">
              <li>• How-to videos</li>
              <li>• Process explanations</li>
              <li>• FAQ content</li>
              <li>• Educational posts</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <WhyItWorks />
  
  <section id="contact" class="py-20 md:py-32 animate-on-scroll">
    <div class="container mx-auto px-6 md:px-12">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block px-3 py-1 bg-accent-100 text-primary-800 rounded-full text-sm font-alexandria mb-4">
          Get Started
        </span>
        
        <h2 class="font-alexandria font-bold text-3xl md:text-4xl mb-6">
          Ready to Create Content That Works?
        </h2>
        
        <p class="text-lg text-primary-800 mb-10">
          Let's discuss your content needs and create materials that truly represent your brand and connect with your audience.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/en/contact/" 
            class="px-8 py-4 bg-primary-800 text-white rounded-md font-alexandria hover:bg-primary-700 transition-all duration-300 hover:shadow-lg hover:scale-105"
          >
            Start Your Project
          </a>
          <a 
            href="mailto:hello@umarucreative.com" 
            class="px-8 py-4 bg-accent-100 text-primary-900 rounded-md font-alexandria hover:bg-accent-200 transition-all duration-300 hover:shadow-lg hover:scale-105"
          >
            Send a Message
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <ServiceCTA />
  <NewFooter />
</Layout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Bloom effect for cards
  gsap.utils.toArray('.bloom-card').forEach((card, i) => {
    gsap.fromTo(
      card, 
      { 
        opacity: 0, 
        scale: 0.8, 
        filter: "blur(5px)" 
      }, 
      {
        opacity: 1,
        scale: 1,
        filter: "blur(0px)",
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: card,
          start: "top 80%",
          toggleActions: "play none none none"
        }
      }
    );
  });
  
  // Fade in animation for sections
  gsap.utils.toArray('.animate-on-scroll').forEach((section, i) => {
    gsap.fromTo(
      section, 
      { opacity: 0, y: 50 }, 
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: section,
          start: "top 80%",
          toggleActions: "play none none none"
        }
      }
    );
  });
</script>