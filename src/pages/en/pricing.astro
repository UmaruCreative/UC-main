        <!-- Highlight Box -->
        <div class="bg-gradient-to-r from-primary-50/80 to-accent-50/80 backdrop-blur-sm p-8 rounded-xl border border-white/30 shadow-lg glass-highlight">
          <div class="text-center">
            <p class="text-primary-800 mb-4">
              <strong>All packages can be upgraded</strong> with a 6‑month Website Care Plan for ongoing support.
            </p>
            <p class="text-primary-700">
