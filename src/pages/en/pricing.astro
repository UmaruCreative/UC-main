---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import LoadingSpinner from '../../components/LoadingSpinner.astro';
import NewFooter from '../../components/NewFooter.astro';
---

<Layout title="Pricing | Umaru Creative" description="Transparent pricing for web design, video creation, and digital services. No hidden costs - just clear packages to help your business grow online." lang="en">
  <LoadingSpinner />
  <Header />
  
  <!-- Hero Section -->
  <section class="min-h-screen flex flex-col justify-center relative overflow-hidden pt-16 animate-on-scroll">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.pexels.com/photos/531756/pexels-photo-531756.jpeg?auto=compress&cs=tinysrgb&w=1920&h=1080&dpr=2" 
        alt="Blue sky with floating clouds" 
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-primary-50/80 to-white/90"></div>
    </div>

    <div class="container mx-auto px-6 md:px-12 py-20 md:py-32 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="font-alexandria font-bold text-4xl md:text-5xl lg:text-6xl leading-tight mb-6 hero-text">
          Pricing Made Simple
        </h1>
        
        <p class="text-lg md:text-xl text-primary-800 mb-10 max-w-3xl mx-auto hero-text">
          Affordable. Transparent. No hidden costs — just clear packages to help your business grow online.
        </p>
      </div>
    </div>
  </section>

  <!-- Website Creation Packages -->
  <section id="website-packages" class="py-20 md:py-32 animate-on-scroll">
    <div class="container mx-auto px-6 md:px-12">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <span class="inline-block px-3 py-1 bg-accent-100 text-primary-800 rounded-full text-sm font-alexandria mb-4">
            Website Creation
          </span>
          <h2 class="font-alexandria font-bold text-3xl md:text-4xl mb-4">
            Website Creation Packages
          </h2>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
          <!-- Landing Page -->
          <div class="bg-white rounded-xl shadow-sm p-8 pricing-card hover:shadow-lg transition-all duration-300 relative">
            <div class="text-center mb-6">
              <h3 class="font-alexandria font-bold text-2xl mb-2">Landing Page</h3>
              <p class="text-primary-700 mb-4">Compact one-page design</p>
              <div class="border-t border-primary-100 my-4"></div>
              <div class="text-4xl font-bold text-primary-800 mb-2">starting €790</div>
              <div class="border-t border-primary-100 my-4"></div>
            </div>
            
            <div class="mb-8">
              <button class="flex items-center justify-between w-full text-left font-alexandria font-medium text-primary-800 mb-4" onclick="toggleIncludes('landing-includes')">
                Includes
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 transform transition-transform expand-icon" id="landing-arrow">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                </svg>
              </button>
              <div id="landing-includes" class="space-y-2 text-primary-700">
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-green-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                  <span>Custom design</span>
                </div>
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-green-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                  <span>Contact section</span>
                </div>
                <div class="hidden expandable-item flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-green-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                  <span>~200 words SEO content</span>
                </div>
                <div class="hidden expandable-item flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-green-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                  <span>4 visuals</span>
                </div>
                <div class="hidden expandable-item flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-green-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                  <span>Basic SEO</span>
                </div>
                <div class="hidden expandable-item flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-green-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                  <span>1 revision</span>
                </div>
              </div>
            </div>
            
            <div class="border-t border-primary-100 pt-6">
              <a 
                href="/en/contact/" 
                class="block w-full text-center px-6 py-3 bg-primary-800 text-white rounded-md font-alexandria hover:bg-primary-700 transition-all duration-300 hover:shadow-lg"
