    transform: translateY(0);
    transition: all 0.3s ease;
  }

  .pricing-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1), 0 0 0 2px rgba(12, 145, 241, 0.2);
  }

  .glass-highlight {
    backdrop-filter: blur(10px);
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .expand-icon {
    transition: transform 0.3s ease;
  }

  .expandable-item {
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .expandable-item.show {
    opacity: 1;
    max-height: 50px;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Fade in animation for sections
  gsap.utils.toArray('.animate-on-scroll').forEach((section, i) => {
    gsap.fromTo(
      section, 
      { opacity: 0, y: 50 }, 
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: section,
          start: "top 80%",
          toggleActions: "play none none none"
        }
      }
    );
  });

  // Pricing card animations
  gsap.utils.toArray('.pricing-card').forEach((card, i) => {
    gsap.fromTo(
      card, 
      { 
        opacity: 0, 
        scale: 0.9,
        y: 30
      }, 
      {
        opacity: 1,
        scale: 1,
        y: 0,
        duration: 0.6,
        delay: i * 0.1,
        ease: "power2.out",
        scrollTrigger: {
          trigger: card,
          start: "top 85%",
          toggleActions: "play none none none"
        }
      }
    );
  });

  // Toggle includes functionality
  function toggleIncludes(id) {
    const includesDiv = document.getElementById(id);
    const arrow = document.getElementById(id.replace('-includes', '-arrow'));
    const expandableItems = includesDiv.querySelectorAll('.expandable-item');
    
    const isExpanded = includesDiv.classList.contains('expanded');
    
    if (!isExpanded) {
      // Expand
      includesDiv.classList.add('expanded');
      arrow.style.transform = 'rotate(180deg)';
      
      expandableItems.forEach((item, index) => {
        setTimeout(() => {
          item.classList.remove('hidden');
          item.classList.add('show');
        }, index * 100);
      });
    } else {
      // Collapse
      includesDiv.classList.remove('expanded');
      arrow.style.transform = 'rotate(0deg)';
      
      expandableItems.forEach((item) => {
        item.classList.remove('show');
        setTimeout(() => {
          item.classList.add('hidden');
        }, 300);
      });
    }
  }

  // Make function globally available
  window.toggleIncludes = toggleIncludes;
</script>