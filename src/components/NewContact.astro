<section id="contact" class="py-20 md:py-32 animate-on-scroll">
  <div class="container mx-auto px-6 md:px-12">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-12">
        <span class="inline-block px-3 py-1 bg-accent-100 text-primary-800 rounded-full text-sm font-alexandria mb-4">
          Contact
        </span>
        
        <h2 class="font-alexandria font-bold text-3xl md:text-4xl mb-4">
          Let's Connect
        </h2>
        
        <p class="text-lg text-primary-800">
          Ready to start?
        </p>
      </div>
      
      <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-sm font-medium text-primary-800 mb-1">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
              required
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-primary-800 mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
              required
            />
          </div>
        </div>
        
        <div>
          <label for="subject" class="block text-sm font-medium text-primary-800 mb-1">Subject</label>
          <input
            type="text"
            id="subject"
            name="subject"
            class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
            required
          />
        </div>
        
        <div>
          <label for="message" class="block text-sm font-medium text-primary-800 mb-1">Message</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
            required
          ></textarea>
        </div>
        
        <div>
          <button
            type="submit"
            class="px-8 py-4 bg-primary-800 text-white rounded-md font-alexandria hover:bg-primary-700 transition-all duration-300 w-full md:w-auto contact-button"
          >
            Contact Me
          </button>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  .contact-button {
    box-shadow: 0 0 0 0 rgba(55, 65, 81, 0.5);
    animation: buttonGlow 2s infinite;
  }

  @keyframes buttonGlow {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(55, 65, 81, 0.5);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(55, 65, 81, 0);
    }
  }
</style>