<section id="contact" class="py-20 md:py-32 animate-on-scroll">
  <div class="container mx-auto px-6 md:px-12">
    <div class="max-w-3xl mx-auto">
      <span class="inline-block px-3 py-1 bg-accent-100 text-primary-800 rounded-full text-sm font-alexandria mb-4">
        Contact
      </span>
      
      <h2 class="font-alexandria font-bold text-3xl md:text-4xl mb-8">
        Start a Conversation
      </h2>
      
      <p class="text-lg text-primary-800 mb-10">
        Interested in working together? Send me a message and I'll get back to you within 2 business days.
      </p>
      
      <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-sm font-medium text-primary-800 mb-1">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
              required
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-primary-800 mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
              required
            />
          </div>
        </div>
        
        <div>
          <label for="subject" class="block text-sm font-medium text-primary-800 mb-1">Subject</label>
          <input
            type="text"
            id="subject"
            name="subject"
            class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
            required
          />
        </div>
        
        <div>
          <label for="message" class="block text-sm font-medium text-primary-800 mb-1">Message</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            class="w-full px-4 py-3 rounded-md border border-primary-200 focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
            required
          ></textarea>
        </div>
        
        <div>
          <button
            type="submit"
            class="px-6 py-3 bg-primary-800 text-white rounded-md font-alexandria hover:bg-primary-700 transition-colors w-full md:w-auto"
          >
            Send Message
          </button>
        </div>
      </form>
    </div>
  </div>
</section>