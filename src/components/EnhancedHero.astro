<!-- Glass Liquid Section -->
<section class="py-20 md:py-32 relative overflow-hidden">
  <div class="absolute inset-0 z-0">
    <img 
      src="https://images.pexels.com/photos/531756/pexels-photo-531756.jpeg?auto=compress&cs=tinysrgb&w=1920&h=1080&dpr=2" 
      alt="Background" 
      class="w-full h-full object-cover opacity-20"
    />
  </div>
  
  <div class="container mx-auto px-6 md:px-12 relative z-10">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="font-alexandria font-bold text-3xl md:text-4xl mb-4">
          Perfect Websites for Every Business Type
        </h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="glass-block p-8 rounded-xl backdrop-blur-sm bg-white/20 border border-white/30 shadow-lg hover:bg-white/30 transition-all duration-300">
          <h3 class="font-alexandria font-bold text-xl mb-4">Content-Driven Businesses</h3>
          <p class="text-primary-800">
            Perfect for blogs, portfolios, and businesses that tell their story through rich content and visual storytelling.
          </p>
        </div>
        
        <div class="glass-block p-8 rounded-xl backdrop-blur-sm bg-white/20 border border-white/30 shadow-lg hover:bg-white/30 transition-all duration-300">
          <h3 class="font-alexandria font-bold text-xl mb-4">Single-Product Focus</h3>
          <p class="text-primary-800">
            Ideal for coffee shops, restaurants, bakeries, and businesses with a focused offering or event-based services.
          </p>
        </div>
        
        <div class="glass-block p-8 rounded-xl backdrop-blur-sm bg-white/20 border border-white/30 shadow-lg hover:bg-white/30 transition-all duration-300">
          <h3 class="font-alexandria font-bold text-xl mb-4">Booking & Pick-up Services</h3>
          <p class="text-primary-800">
            Great for salons, food trucks, and service businesses that need simple booking or order management features.
          </p>
        </div>
        
        <div class="glass-block p-8 rounded-xl backdrop-blur-sm bg-white/20 border border-white/30 shadow-lg hover:bg-white/30 transition-all duration-300">
          <h3 class="font-alexandria font-bold text-xl mb-4">Local Markets & Creatives</h3>
          <p class="text-primary-800">
            Perfect for farmers, artisan vendors, new architects, indie gaming studios, and creative professionals.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-line {
    opacity: 0;
    transform: translateY(30px);
    display: inline-block;
  }

  .hero-buttons {
    opacity: 0;
    transform: translateY(30px);
  }

  .glass-block {
    transform: translateY(20px);
    opacity: 0;
  }

  @keyframes logoRun {
    0% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(-50px, -30px) scale(1.1); }
    50% { transform: translate(-100px, 20px) scale(0.9); }
    75% { transform: translate(-30px, 40px) scale(1.05); }
    100% { transform: translate(0, 0) scale(1); }
  }

  #logo-char-1 {
    animation: logoRun 8s ease-in-out infinite;
    animation-delay: 0s;
  }

  #logo-char-2 {
    animation: logoRun 12s ease-in-out infinite;
    animation-delay: 4s;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Text fade in line by line
  document.addEventListener('DOMContentLoaded', () => {
    const heroLines = document.querySelectorAll('.hero-line');
    const heroButtons = document.querySelector('.hero-buttons');
    
    heroLines.forEach((line, index) => {
      const delay = parseFloat(line.dataset.delay) || 0;
      
      gsap.to(line, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        delay: delay,
        ease: "power2.out"
      });
    });
    
    if (heroButtons) {
      const delay = parseFloat(heroButtons.dataset.delay) || 0;
      gsap.to(heroButtons, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        delay: delay,
        ease: "power2.out"
      });
    }
  });
  
  // Glass blocks animation on scroll
  gsap.utils.toArray('.glass-block').forEach((block, i) => {
    gsap.fromTo(
      block, 
      { 
        opacity: 0, 
        y: 20,
        scale: 0.95
      }, 
      {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 0.8,
        delay: i * 0.1,
        ease: "power2.out",
        scrollTrigger: {
          trigger: block,
          start: "top 80%",
          toggleActions: "play none none none"
        }
      }
    );
  });
  
  // Floating animation for glass blocks
  gsap.utils.toArray('.glass-block').forEach((block, i) => {
    gsap.to(block, {
      y: "+=10",
      duration: 2 + (i * 0.3),
      repeat: -1,
      yoyo: true,
      ease: "power1.inOut",
      delay: i * 0.2
    });
  });
</script>